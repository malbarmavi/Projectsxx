@model  List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h2></h2>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="panel panel-default form-top"">
            <div class="panel-body >
                <div class="table-responsive">


                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr><td></td><td>User Name</td> <td>First Name</td> <td>Last Name</td> <td>Email</td></tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.RouteLink("Delete", new { controller = "Employee", action = "Delete", id = user.Id })
                                    @*@Html.ActionLink("Delete", "Delete", "Employee", new { id = user.Id })*@
                                </td>
                                <td>@user.UserName</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
            <div class="panel-footer text-center">
                @Html.RouteLink("Add", new { controller = "Employee", action = "Add" }, new { @class = "btn btn-primary" })
            </div>
        </div>

    </div>
</div>