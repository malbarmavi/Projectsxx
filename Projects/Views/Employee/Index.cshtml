@model  List<User>
@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/_Layout.cshtml";
}

<h2></h2>

<a class="btn btn-circle" href="@Url.RouteUrl("default", new {controller = "Employee", action= "add" })"><i class="fa fa-user"></i></a>


<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="panel panel-default ">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr><td></td><td>User Name</td> <td>First Name</td> <td>Last Name</td><td>Role</td> <td>Email</td></tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="text-center " >
                                        @Html.RouteLink(" ", new { controller = "Employee", action = "Delete", id = user.Id },new  {@class= "fa fa-times text-danger " })
                                        @*@Html.ActionLink("Delete", "Delete", "Employee", new { id = user.Id })*@
                                    </td>
                                    <td>@user.UserName</td>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Role</td>

                                    <td>@user.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>